{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-6 text-center">
                <img src="{{ asset('build/logo.png') }}" alt="logo">
            </div>
        </div>
        <div class="row">
            <form method="post" class="col-12 text-center">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="inputPseudo">Pseudo</label>
                    <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="row">
                    <div class="col-6">
                        <a href="{{ path('app_register') }}">S'inscrire</a>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-lg btn-primary text-center" type="submit">
                            Sign in
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
